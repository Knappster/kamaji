{
	"name": "Kamaji",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts",
			"nvmVersion": "latest"
		}
	},
	"forwardPorts": [
		"db:3306",
		"phpmyadmin:8080"
	],
	"postCreateCommand": "rustup target add x86_64-unknown-linux-musl && cargo install sqlx-cli --no-default-features --features rustls,mysql",
	"customizations": {
		"vscode": {
			"extensions": [
				"Vue.volar",
				"esbenp.prettier-vscode",
				"inferrinizzard.prettier-sql-vscode"
			]
		}
	}
}